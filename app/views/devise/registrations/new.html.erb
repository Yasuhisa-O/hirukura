<div class="container">
  <div class="text-center m-5">
    <div class="p-3 my-4 border-bottom">
      <span class="display-5 fw-bold">新規登録</span>
    </div>
  </div>

  <div class="container-fluid">
    <div class="p-2 mb-4 bg-light border rounded-3">
      <div class="row text-center">
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
          <%#= render "devise/shared/error_messages", resource: resource %>
          <div class='field'>
            <%= f.label :name%>
            <%= f.text_field :name, class:'form-control mb-4',autofocus: true%>
          </div>
          <div class='field'>
            <%= f.label :email%>
            <%= f.email_field :email, class:'form-control mb-4'%>
          </div>
          <div class='field'>
            <%= f.label :password%>
            <i>(英数字6文字以上)</i>
            <%= f.password_field :password, class:'form-control mb-4', autocomplete: "off"%>
          </div>
          <div class='field'>
            <%= f.label :password_confirmation%>
            <%= f.password_field :password_confirmation, class:'form-control mb-4', autocomplete: "off"%>
          </div>
            <%= f.submit "Create Account", class: "btn btn-lg btn-primary btn-block my-3"%>
        <% end %>
      </div>
    </div>
  </div>
</div>