<%= render "posts/header" %>

  <div class="container bg-light">
    <div class="p-3 my-4 border-bottom text-center">
        <span class="display-5 fw-bold">プロフィール</span>
    </div>

    <div class="p-2 mb-4 bg-body-tertiary border rounded-3">
      <div class="container-fluid py-2">
        <div class="row">
          <div class="col">
            <%= image_tag 'yama_image1.jpg', class: "img-thumbnail", style: "width:600px" , alt: "image cap" %>
          </div>
          <div class="col-lg ">
            <div class="p-3 pb-0">
              <p class="display-6 fw-bold border-bottom">名前</p>
              <p class="display-6 fw-bold pb-2"><%= @user.name %></p>
              <p class="display-6 fw-bold border-bottom">Email</p>
              <p class="display-6 fw-bold pb-2"><%= @user.email %></p>
            </div>
          </div>
        </div>
        <div class="row text-center my-4">
        <div class="col-6">
          <%= link_to "編集する",  edit_user_path(@user.id), class: "btn btn-lg btn-primary btn-block my-1 fs-4 w-100" %>
        </div>
          <% if user_signed_in? %>
            <% if current_user.id == @user.id %>
            <div class="col-6">
              <%= link_to "退会する", user_path(@user.id), data: { turbo_method: :delete }, class: "btn btn-lg btn-danger btn-block my-1 fs-4 w-100" %>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="album py-5">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% @posts.reverse.each do |post| %>
            <div class="col">
              <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
              <title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect>
              <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                <div class="card-body">
                <p class="card-text">ルート名：<%= post.run_spot %></p>
                <p class="card-text">走行距離：<%= post.mileage.name %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                    <%= link_to "View", post_path(post.id), class: "btn btn-sm btn-outline-secondary" %>
                    <% if user_signed_in? %>
                      <% if current_user.id == post.user_id %>
                        <%= link_to "Edit", edit_post_path(post.id), class: "btn btn-sm btn-outline-secondary" %>
                      <% end %>
                    <% end %>
                    </div>
                    <small class="text-body-secondary">9 mins</small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
